---
interface Props {
  label?: string;
}
const { label = 'Live on Base Mainnet' } = Astro.props;
---
<div class="status-badge">
  <span class="status-dot-wrap">
    <span class="status-dot"></span>
    <span class="status-ring"></span>
  </span>
  <span class="status-label mono">{label}</span>
</div>

<style>
  .status-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.4rem 1rem;
    background: rgba(97, 255, 202, 0.06);
    border: 1px solid rgba(97, 255, 202, 0.2);
    border-radius: 999px;
    font-size: 0.8rem;
  }
  .status-dot-wrap {
    position: relative;
    width: 8px;
    height: 8px;
  }
  .status-dot {
    position: absolute;
    inset: 0;
    background: var(--accent-green);
    border-radius: 50%;
  }
  .status-ring {
    position: absolute;
    inset: -3px;
    border: 1px solid var(--accent-green);
    border-radius: 50%;
    animation: ring-pulse 2s ease-in-out infinite;
  }
  .status-label {
    color: var(--accent-green);
  }
  @keyframes ring-pulse {
    0%, 100% { opacity: 0.6; transform: scale(1); }
    50% { opacity: 0; transform: scale(1.5); }
  }
</style>
