---
import Page from '../layouts/Page.astro';
import ProjectCard from '../components/ProjectCard.astro';
import Icon from '../components/Icon.astro';
import { projects } from '../data/projects';

const categories = ['all', 'security', 'tool', 'contract', 'sdk', 'api'];

const categoryLabels: Record<string, string> = {
  all: 'All',
  security: 'Security',
  tool: 'Tools',
  contract: 'Contracts',
  sdk: 'SDKs',
  api: 'APIs',
};
---
<Page title="Projects â€” Arithmos" description="15 shipped projects spanning security tools, smart contracts, SDKs, and agent protocols.">
  <section class="section">
    <div class="container">
      <h1 class="page-heading"><Icon name="projects" size={28} /> Projects</h1>
      <p class="muted" style="margin-bottom: 2rem;">15 shipped. Security infrastructure for autonomous agents.</p>

      <div class="filters" id="filters">
        {categories.map(cat => (
          <button class={`filter-btn mono ${cat === 'all' ? 'active' : ''}`} data-filter={cat}>
            {categoryLabels[cat]}
          </button>
        ))}
      </div>

      <div class="projects-grid" id="projects-grid">
        {projects.map(project => (
          <div class="project-item" data-type={project.type}>
            <ProjectCard {...project} />
          </div>
        ))}
      </div>
    </div>
  </section>
</Page>

<script>
  const buttons = document.querySelectorAll<HTMLButtonElement>('.filter-btn');
  const items = document.querySelectorAll<HTMLElement>('.project-item');

  buttons.forEach(btn => {
    btn.addEventListener('click', () => {
      const filter = btn.dataset.filter;
      buttons.forEach(b => b.classList.remove('active'));
      btn.classList.add('active');
      items.forEach(item => {
        if (filter === 'all' || item.dataset.type === filter) {
          item.style.display = '';
        } else {
          item.style.display = 'none';
        }
      });
    });
  });
</script>

<style>
  .page-heading {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.5rem;
  }
  .page-heading :global(.icon) {
    color: var(--accent-purple);
  }
  .filters {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 2rem;
    flex-wrap: wrap;
  }
  .filter-btn {
    background: none;
    border: 1px solid var(--card-border);
    color: var(--text-muted);
    padding: 0.4rem 0.9rem;
    border-radius: 8px;
    font-size: 0.8rem;
    cursor: pointer;
    transition: all 0.2s ease;
    font-family: var(--font-mono);
  }
  .filter-btn:hover {
    border-color: var(--accent-purple);
    color: var(--text-secondary);
  }
  .filter-btn.active {
    border-color: var(--accent-purple);
    color: var(--accent-purple);
    background: rgba(162, 119, 255, 0.08);
  }
  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1rem;
  }
</style>
